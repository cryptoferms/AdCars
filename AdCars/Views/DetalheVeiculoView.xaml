                        <!--/Detalhes do veiculo-->
                        
                        <BoxView WidthRequest="100"
                                 HeightRequest="1"
                                 Color="#DDDDDD" />
 
                        <StackLayout Spacing="5"
                                     Margin="30, 15, 30, 0">   
                            <Label Text="Descrição"

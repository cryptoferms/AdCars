                                    <Label Text="Condição"
                                           Style="{StaticResource DetailLabelSubtitleStyle}" />
                                    <Label x:Name="LblCondicao"
                                           Style="{StaticResource DetailComunLabelStyle}" />
                                </FlexLayout>

                            </StackLayout> 

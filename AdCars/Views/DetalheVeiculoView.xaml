                                   Style="{StaticResource DetailDescLabelStyle}" />
                        </StackLayout>

                        <BoxView WidthRequest="100"
                                 HeightRequest="1"
                                 Color="#DDDDDD" />

                        <StackLayout Spacing="10"
                                     Margin="30, 15, 30, 15"> 
                            <FlexLayout Direction="Column"
                                        Margin="0, 10, 0, 0"> 
                                <Label Text="Sobre o vendedor"
                                   Style="{StaticResource DetailDescTitleLabelStyle}" />

                                <forms1:CachedImage HorizontalOptions="Start"
                                                    HeightRequest="70"
                                                    WidthRequest="70"
                                                    LoadingPlaceholder="userPlaceholder.png"
                                                    x:Name="ImgUser">
                                    <forms1:CachedImage.Transformations>
                                        <transformations:CircleTransformation />
                                    </forms1:CachedImage.Transformations>
                                </forms1:CachedImage>
 
                                <Label Text="Aqui vai o nome do vendedor"
                                       FontAttributes="Bold"
                                       x:Name="LblNomeVendedor"
                                       Style="{StaticResource DetailDescLabelStyle}" />

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="50" />
                                    </Grid.RowDefinitions>
                                    
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
    
                                    <Image Source="locationIcon.png" Grid.Row="0" Grid.Column="0"/>
                                    
                                    <Label x:Name="LblLocation"
                                           Grid.Row="0"
                                           Grid.Column="1"
                                           Margin="0,15,0,0"
                                           Style="{StaticResource DetailSmallBlueLabelStyle}" /> 
                                </Grid>
                                
                            </FlexLayout>

                        </StackLayout>

                        <StackLayout Orientation="Horizontal" Margin="30, 15, 0, 20">
                            <FlexLayout Direction="Row"> 
                                <Button Text="EMAIL"   
                                        x:Name="BtnEmail"
                                        Clicked="BtnEmail_Clicked" 
                                        Style="{StaticResource DetailButtonStyle}"
                                        WidthRequest="110"
                                        HeightRequest="50"/>
                                
                                <Button Text="SMS" 
                                        x:Name="BtnSms"
                                        Clicked="BtnSms_Clicked"
                                        Margin="10,0,10,0"
                                        WidthRequest="110"
                                        HeightRequest="50"
                                        Style="{StaticResource DetailButtonStyle}" />
                                
                                <Button Text="CONTATO" 
                                        x:Name="BtnCall"
                                        Clicked="BtnCall_Clicked"
                                        WidthRequest="110"
                                        HeightRequest="50"
                                        Style="{StaticResource DetailButtonStyle}" />
                            </FlexLayout>
                             

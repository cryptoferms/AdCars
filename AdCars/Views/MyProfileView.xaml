<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             x:Class="AdCars.Views.MyProfileView"
             xmlns:vm="clr-namespace:AdCars.ViewModels"
             xmlns:rf="clr-namespace:RedCorners.Forms;assembly=RedCorners.Forms"
             BackgroundColor="#FFFF">
    <ContentPage.BindingContext>
        <vm:MyProfileViewModel></vm:MyProfileViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>

        <Grid RowDefinitions="*, 2*, Auto">
            
            <StackLayout Grid.RowSpan="3"
                         HorizontalOptions="Start"
                         Spacing="5"> 
                
                <StackLayout BackgroundColor="#1e4294">
                    <Grid Margin="0, 15, 0, 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <ffimage:CachedImage Grid.Row="0"
                                             x:Name="ProfileImage"
                                             LoadingPlaceholder="user.png"
                                             Source="user.png"
                                             HeightRequest="90"
                                             WidthRequest="90"
                                             Aspect="AspectFit"
                                             CacheType="All"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center">
                            <ffimage:CachedImage.Transformations>
                                <transformations:CircleTransformation />
                            </ffimage:CachedImage.Transformations>
                        </ffimage:CachedImage>

                        <StackLayout Grid.Row="1"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Margin="0, -30, 0, 0">
                            <Label Style="{StaticResource MyProfileTitleStyle}"
                                   Text="{Binding Nome}" />

                            <Label Text="{Binding Email}"
                                   Margin="0, -8, 0, 0"
                                   Style="{StaticResource MyProfileSubtitleStyle}">
                            </Label>

                            <!--<Label HorizontalOptions="Center"
                                   Padding="30,-5,20,10"
                                   VerticalOptions="Center"
                                   Text="Carregar Foto"
                                   TextColor="White"
                                   FontSize="Medium">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                                </Label.GestureRecognizers>
                            </Label>-->
                        </StackLayout>

                        <rf:Frame2 Grid.Row="0"
                                   HasShadow="True"
                                   ShadowColor="Black"
                                   CornerRadius="100"
                                   ShadowRadius="15"
                                   BackgroundColor="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Margin="70, 50, 0, 0"
                                   Padding="7">

                            <ImageButton HeightRequest="16"
                                         WidthRequest="16"
                                         BackgroundColor="Transparent"
                                         Source="pencil.png"
                                         Clicked="TapGestureRecognizer_Tapped" />
                        </rf:Frame2>

                    </Grid>
                
                </StackLayout>

                <StackLayout Margin="20, -25, 20, 0"> 
                    <rf:Frame2 HasShadow="True"
                               ShadowColor="Black"
                               CornerRadius="2"
                               ShadowRadius="30"
                               BackgroundColor="White">  
                        
                        <StackLayout>  
                            <FlexLayout Direction="Column"
                                        JustifyContent="Start"
                                        AlignItems="Start"
                                        Margin="10, 0, 20, 0">

                                <StackLayout Orientation="Horizontal"
                                             Margin="0, 10, 0, 20"> 
                                    <Image Source="key.png" 
                                           InputTransparent="True"
                                           WidthRequest="25"
                                           HeightRequest="25"/>

                                    <Label Margin="10, 0, 0, 0"
                                           Text="Alterar senha"
                                           Style="{StaticResource MyProfileBasicStyle}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding TrocarSenhaCommand}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal" 
                                             Margin="0, 10, 0, 20"> 
                                    <Image Source="phone.png"
                                           WidthRequest="25"
                                           HeightRequest="25" />

                                    <Label Margin="10, 0, 0, 0"
                                           Text="Adicionar n° de telefone"
                                           Style="{StaticResource MyProfileBasicStyle}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding TrocarTelefoneCommand}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>

                                <StackLayout Orientation="Horizontal"
                                             Margin="0, 10, 0, 10"> 
                                    <Image Source="logout.png"
                                           WidthRequest="25"
                                           HeightRequest="25" />
                                    
                                    <Label Margin="10, 0, 0, 0"
                                           Text="Logout"
                                           Style="{StaticResource MyProfileBasicStyle}">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding LogoutCommand}" />
                                        </Label.GestureRecognizers>
                                    </Label>
                                </StackLayout>
                            </FlexLayout>
                        </StackLayout>
                    </rf:Frame2>
                </StackLayout> 
            </StackLayout> 
        </Grid>
    </ContentPage.Content>
</ContentPage>


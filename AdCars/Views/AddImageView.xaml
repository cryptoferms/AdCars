<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdCars.Views.AddImageView">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="FillAndExpand" Padding="20">
                <Label Text="Envie as Fotos"
                       Margin="10"
                       Style="{StaticResource AddImageTitleStyle}"/>
                <FlexLayout VerticalOptions="CenterAndExpand"
                            Wrap="Wrap"
                            JustifyContent="SpaceEvenly">
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img1">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg1" Tapped="TapImg1_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img2">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg2" Tapped="TapImg2_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img3">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg3"  Tapped="TapImg3_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img4">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg4"  Tapped="TapImg4_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img5">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg5" Tapped="TapImg5_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="addImage.png"
                           HeightRequest="100"
                           WidthRequest="100"
                           x:Name="Img6">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg6"  Tapped="TapImg6_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </FlexLayout>
                <Label Text="Você pode adicionar até 6 fotos"
                       Margin="10"
                       Style="{StaticResource AddImageBasicStyle}" />
                <Button Text="Enviar" 
                        VerticalOptions="EndAndExpand" 
                        Style="{StaticResource ButtonStyle}"
                        Clicked="BtnDone_Clicked"
                        x:Name="BtnDone"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
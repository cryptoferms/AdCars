<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AdCars.ViewModels"
             x:Class="AdCars.Views.LoginView"
             Title="Login View"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.BindingContext>
        <vm:LoginViewModel></vm:LoginViewModel>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout 
                        Spacing="15" Margin="0" VerticalOptions="CenterAndExpand" Grid.Row="1" Padding="40">
                <Label Text="AdCars" TextColor="Blue" VerticalOptions="Center" HorizontalOptions="Center" FontSize="36"/>
                <Frame HasShadow="True" CornerRadius="30">
                    <Entry Placeholder="E-mail" Keyboard="Email" PlaceholderColor="#6c757d" TextColor="#272828"/>
                </Frame>
                <Frame HasShadow="True" CornerRadius="30">
                <Entry Placeholder="Digite sua senha" IsPassword="True" PlaceholderColor="#6c757D"/>
                </Frame>
                <Button Text="Login" Command="{Binding LoginCommand}" CornerRadius="30" BackgroundColor="Purple" TextColor="White"/>
            </StackLayout>
            <Frame BackgroundColor="Blue" Grid.Row="2">
                <StackLayout Padding="80,10,0,0">
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Não possui conta? " TextColor="White" FontSize="15"/>
                                <Span Text=" Cadastre-se aqui" TextColor="White" FontAttributes="Bold">
                                <Span.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding RegistroCommand}"/>
                                    </Span.GestureRecognizers>
                                </Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>